# Loop Architect - Environment Configuration (Optional)

# SAM Audio Settings (if using SAM Audio for named sound isolation)
# ENABLE_SAM_AUDIO=true
# SAM_AUDIO_MODEL_PATH=/path/to/sam-audio-model

# Processing Limits
# MAX_AUDIO_LENGTH=600  # Maximum audio length in seconds (default: 600 = 10 minutes)
# MAX_STEMS=6           # Maximum number of stems to process simultaneously

# Model Settings
# USE_GPU=true          # Use GPU for faster processing if available
# BATCH_SIZE=1          # Number of audio files to process in parallel

# Output Settings
# OUTPUT_FORMAT=wav     # Output audio format (wav, flac, mp3)
# OUTPUT_BITRATE=16     # Output bit depth (8, 16, 24, 32)
# ZIP_COMPRESSION=9     # ZIP compression level (0-9, 0=none, 9=best)

# Debug Settings
# DEBUG=false           # Enable debug logging
# VERBOSE=false         # Enable verbose output
